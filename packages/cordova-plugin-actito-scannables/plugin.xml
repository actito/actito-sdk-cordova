<?xml version="1.0" encoding="UTF-8"?>
<plugin id="cordova-plugin-actito-scannables"
        version="5.0.0-canary.1"
        xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <name>Actito Scannables</name>

    <js-module name="ActitoScannables" src="build/actito-scannables.bundle.js">
        <clobbers target="ActitoScannables" />
        <merges target="cordova.plugins.ActitoScannables" />
    </js-module>

    <asset src="build/actito-scannables.bundle.js.map" target="plugins/cordova-plugin-actito-scannables/build/actito-scannables.bundle.js.map" />

    <platform name="android">
        <config-file target="config.xml" parent="/*">
            <preference name="AndroidXEnabled" value="true" />

            <preference name="GradlePluginKotlinEnabled" value="true" />
            <preference name="GradlePluginKotlinVersion" value="1.9.10" />
        </config-file>

        <config-file target="res/xml/config.xml" parent="/widget">
            <feature name="ActitoScannables">
                <param name="android-package" value="com.actito.scannables.cordova.ActitoScannablesPlugin" />
                <param name="onload" value="true" />
            </feature>
        </config-file>

        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="ActitoScannables">
                <param name="android-package" value="com.actito.scannables.cordova.ActitoScannablesPlugin" />
                <param name="onload" value="true" />
            </feature>
        </config-file>

        <config-file target="AndroidManifest.xml" parent="/manifest/application">
            <activity
                    android:name="com.actito.scannables.ScannableActivity"
                    android:exported="false"
                    android:theme="@style/Theme.AppCompat.Light" />
        </config-file>

        <source-file src="src/android/ActitoScannablesPlugin.kt" target-dir="app/src/main/kotlin/com/actito/scannables/cordova" />
        <source-file src="src/android/ActitoScannablesPluginEventBroker.kt" target-dir="app/src/main/kotlin/com/actito/scannables/cordova" />
        <source-file src="src/android/Logger.kt" target-dir="app/src/main/kotlin/com/actito/scannables/cordova" />

        <framework custom="true" src="src/android/build-extras.gradle" type="gradleReference" />
    </platform>

    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="ActitoScannables">
                <param name="ios-package" value="ActitoScannablesPlugin" />
                <param name="onload" value="true" />
            </feature>
        </config-file>

        <source-file src="src/ios/ActitoScannablesPlugin.swift" />
        <source-file src="src/ios/ActitoScannablesPluginEventBroker.swift" />

        <podspec>
            <config>
                <source url="https://github.com/CocoaPods/Specs.git" />
            </config>
            <pods use-frameworks="true">
                <pod name="Actito/ActitoScannablesKit" spec="5.0.0-canary.1" />
            </pods>
        </podspec>
    </platform>
</plugin>
