<?xml version="1.0" encoding="UTF-8"?>
<plugin id="cordova-plugin-actito"
        version="5.0.0-canary.1"
        xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <name>Actito</name>

    <js-module name="Actito" src="build/actito.bundle.js">
        <clobbers target="Actito" />
        <merges target="cordova.plugins.Actito" />
    </js-module>

    <asset src="build/actito.bundle.js.map" target="plugins/cordova-plugin-actito/build/actito.bundle.js.map" />

    <platform name="android">
        <hook type="after_prepare" src="src/hooks/android/after-prepare.js"/>

        <config-file target="config.xml" parent="/*">
            <preference name="AndroidXEnabled" value="true" />
            <preference name="GradlePluginKotlinEnabled" value="true" />
            <preference name="GradlePluginKotlinVersion" value="1.9.10" />
        </config-file>

        <config-file parent="/widget" target="res/xml/config.xml">
            <feature name="Actito">
                <param name="android-package" value="com.actito.cordova.ActitoPlugin" />
                <param name="onload" value="true" />
            </feature>
        </config-file>

        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="Actito">
                <param name="android-package" value="com.actito.cordova.ActitoPlugin" />
                <param name="onload" value="true" />
            </feature>
        </config-file>

        <config-file parent="/manifest/application" target="AndroidManifest.xml">
            <receiver android:name="com.actito.cordova.ActitoPluginReceiver" android:exported="false" />
        </config-file>

        <source-file src="src/android/ActitoPlugin.kt" target-dir="app/src/main/kotlin/com/actito/cordova" />
        <source-file src="src/android/ActitoPluginEventBroker.kt" target-dir="app/src/main/kotlin/com/actito/cordova" />
        <source-file src="src/android/ActitoPluginReceiver.kt" target-dir="app/src/main/kotlin/com/actito/cordova" />
        <source-file src="src/android/Logger.kt" target-dir="app/src/main/kotlin/com/actito/cordova" />

        <framework custom="true" src="src/android/build-extras.gradle" type="gradleReference" />
    </platform>

    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="Actito">
                <param name="ios-package" value="ActitoPlugin" />
                <param name="onload" value="true" />
            </feature>
        </config-file>

        <source-file src="src/ios/ActitoPlugin.swift" />
        <source-file src="src/ios/ActitoPluginEventBroker.swift" />
        <source-file src="src/ios/ActitoLogger.swift" />

        <podspec>
            <config>
                <source url="https://github.com/CocoaPods/Specs.git" />
            </config>
            <pods use-frameworks="true">
                <pod name="Actito/ActitoKit" spec="5.0.0-canary.5" />
                <pod name="Actito/ActitoUtilitiesKit" spec="5.0.0-canary.5" />
            </pods>
        </podspec>
    </platform>
</plugin>
