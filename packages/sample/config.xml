<?xml version='1.0' encoding='utf-8'?>
<widget id="com.actito.sample.app.dev" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>Sample</name>
    <description>
        A simplified fashion application to demonstrate Actito basic features.
    </description>
    <author email="product@actito.com" href="https://actito.com">
        Actito
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="24" />
        <preference name="android-compileSdkVersion" value="35" />
        <preference name="android-targetSdkVersion" value="34" />
        <preference name="android-buildToolsVersion" value="35.0.0" />

        <preference name="GradleVersion" value="8.11.1" />
        <preference name="AndroidGradlePluginVersion" value="8.7.2" />
        <preference name="GradlePluginKotlinVersion" value="1.9.10" />
        <preference name="ActitoServicesGradlePluginVersion" value="1.0.1" />
        <preference name="AndroidLaunchMode" value="singleTask" />

        <preference name="ActitoBeaconsSupportEnabled" value="true" />

        <allow-intent href="market:*" />

        <resource-file src="notificare-services.json" target="app/notificare-services.json" />
        <resource-file src="google-services.json" target="app/google-services.json" />

        <config-file target="AndroidManifest.xml" parent="/manifest/application">
            <meta-data android:name="com.actito.debug_logging_enabled" android:value="true" />
        </config-file>

        <config-file target="AndroidManifest.xml" parent="/manifest/application/activity/[@android:name='MainActivity']">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="${applicationId}" />
            </intent-filter>

            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:host="actito-sample-app-dev.ntc.re" android:scheme="https" />
            </intent-filter>

            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:host="67092ff3d6bb84eac9e0fb51.applinks.notifica.re" android:pathPrefix="/testdevice" android:scheme="https" />
            </intent-filter>
        </config-file>
    </platform>

    <platform name="ios">
        <preference name="SwiftVersion" value="5" />
        <preference name="deployment-target" value="13.0" />
        <preference name="scheme" value="app" />
        <preference name="hostname" value="localhost" />
        <preference name="ActitoNotificationServiceExtensionEnabled" value="true" />

        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />

        <resource-file src="NotificareServices.plist" target="NotificareServices.plist" />
        <resource-file src="NotificareOptions.plist" target="NotificareOptions.plist" />

        <config-file target="*-Info.plist" parent="CFBundleURLTypes">
            <array>
                <dict>
                    <key>CFBundleURLSchemes</key>
                    <array>
                        <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
                    </array>
                </dict>
            </array>
        </config-file>

        <config-file target="*/Entitlements-Debug.plist" parent="com.apple.developer.associated-domains">
            <array>
                <string>applinks:actito-sample-app-dev.ntc.re</string>
                <string>applinks:67092ff3d6bb84eac9e0fb51.applinks.notifica.re</string>
            </array>
        </config-file>

        <config-file target="*-Info.plist" parent="NFCReaderUsageDescription">
            <string>We will need access to the device's NFC reader to unlock new content.</string>
        </config-file>
        <config-file target="*-Info.plist" parent="NSCameraUsageDescription">
            <string>We will need access to the device's camera to reply to notifications or scan QR codes.</string>
        </config-file>
        <config-file target="*-Info.plist" parent="NSLocationAlwaysAndWhenInUseUsageDescription">
            <string>We will need to make use of your location to present relevant information about offers around you.</string>
        </config-file>
        <config-file target="*-Info.plist" parent="NSLocationAlwaysUsageDescription">
            <string>We will need to make use of your location to present relevant information about offers around you.</string>
        </config-file>
        <config-file target="*-Info.plist" parent="NSLocationWhenInUseUsageDescription">
            <string>We will need to make use of your location to present relevant information about offers around you.</string>
        </config-file>
        <config-file target="*-Info.plist" parent="NSMicrophoneUsageDescription">
            <string>We will need access to the device's microphone to reply to notifications.</string>
        </config-file>
        <config-file target="*-Info.plist" parent="NSPhotoLibraryUsageDescription">
            <string>We may need to access your photos to reply to notifications.</string>
        </config-file>
    </platform>
</widget>
