<?xml version="1.0" encoding="UTF-8"?>
<plugin id="cordova-plugin-actito-geo"
        version="5.0.0-beta.2"
        xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <name>Actito Geo</name>

    <js-module name="ActitoGeo" src="build/actito-geo.bundle.js">
        <clobbers target="ActitoGeo" />
        <merges target="cordova.plugins.ActitoGeo" />
    </js-module>

    <asset src="build/actito-geo.bundle.js.map" target="plugins/cordova-plugin-actito-geo/build/actito-geo.bundle.js.map" />

    <platform name="android">
        <hook type="after_prepare" src="src/hooks/android/after-prepare.js"/>

        <config-file target="config.xml" parent="/*">
            <preference name="AndroidXEnabled" value="true" />

            <preference name="GradlePluginKotlinEnabled" value="true" />
            <preference name="GradlePluginKotlinVersion" value="2.1.20" />
        </config-file>

        <config-file target="res/xml/config.xml" parent="/widget">
            <feature name="ActitoGeo">
                <param name="android-package" value="com.actito.geo.cordova.ActitoGeoPlugin" />
                <param name="onload" value="true" />
            </feature>
        </config-file>

        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="ActitoGeo">
                <param name="android-package" value="com.actito.geo.cordova.ActitoGeoPlugin" />
                <param name="onload" value="true" />
            </feature>
        </config-file>

        <source-file src="src/android/ActitoGeoPlugin.kt" target-dir="app/src/main/kotlin/com/actito/geo/cordova" />
        <source-file src="src/android/ActitoGeoPluginEventBroker.kt" target-dir="app/src/main/kotlin/com/actito/geo/cordova" />
        <source-file src="src/android/Logger.kt" target-dir="app/src/main/kotlin/com/actito/geo/cordova" />

        <framework custom="true" src="src/android/build-extras.gradle" type="gradleReference" />
    </platform>

    <platform name="ios" package="swift">
        <config-file target="config.xml" parent="/*">
            <feature name="ActitoGeo">
                <param name="ios-package" value="ActitoGeoPlugin" />
                <param name="onload" value="true" />
            </feature>
        </config-file>

        <source-file src="src/ios/ActitoGeoPlugin.swift" />
        <source-file src="src/ios/ActitoGeoPluginEventBroker.swift" />
        <source-file src="src/ios/ActitoGeoLogger.swift" />

        <podspec>
            <config>
                <source url="https://github.com/CocoaPods/Specs.git" />
            </config>
            <pods use-frameworks="true">
                <pod name="Actito/ActitoGeoKit" spec="5.0.0-beta.2" nospm="true" />
            </pods>
        </podspec>
    </platform>
</plugin>
